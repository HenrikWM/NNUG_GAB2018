@using GAB.ImageProcessingPipeline.Common
@using GAB.ImageProcessingPipeline.Web.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Constants.SiteName</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/imageprocessingpipeline-styles")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        var imagePipelineApp = {
            config: @Html.Raw(Json.Encode(new JsConfig())),
            upload: {
                fileName: ''
            },
            loaderGifUrl: window.location.protocol + "//" + location.host + "/Content/ImageProcessingPipeline/ajax-loader.gif"
        };
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Constants.SiteName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Upload", "Index", "Upload")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Constants.SiteName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/imageprocessingpipeline-scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
